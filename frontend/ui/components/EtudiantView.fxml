<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.ui.controllers.EtudiantViewController" spacing="25" styleClass="content-pane">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox spacing="5">
            <Label text="Visualisez et gérez les informations de tous les étudiants inscrits." styleClass="header-subtitle"/>
            <Label fx:id="lblMessage" text="" styleClass="error-text" visible="false" />
        </VBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <TextField fx:id="txtSearch" promptText="Rechercher un étudiant..." styleClass="search-field" prefWidth="220" />
            
            <Button text="+ Ajouter" onAction="#onAdd" styleClass="action-button-primary"/>
            <Button text="Modifier" onAction="#onEdit" styleClass="action-button-outline"/>
            <Button text="Supprimer" onAction="#onDelete" styleClass="action-button-danger"/>
        </HBox>
    </HBox>

    <VBox styleClass="card-container" VBox.vgrow="ALWAYS">
        <TableView fx:id="tableEtudiants" VBox.vgrow="ALWAYS" styleClass="modern-table">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colId" text="ID" maxWidth="100" />
                <TableColumn fx:id="colNom" text="Nom" />
                <TableColumn fx:id="colPrenom" text="Prénom" />
                <TableColumn fx:id="colEmail" text="Email" />
                <TableColumn fx:id="colClasse" text="Classe" />
            </columns>
        </TableView>
    </VBox>

</VBox>